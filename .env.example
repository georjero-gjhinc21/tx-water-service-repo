# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Encryption (for SSN encryption)
SSN_ENCRYPTION_KEY=your_32_byte_encryption_key_here

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Email Service (SendGrid, AWS SES, or Postmark)
EMAIL_API_KEY=your_email_api_key_here
EMAIL_FROM_ADDRESS=noreply@yourcity.gov

# Payment Processing (Stripe or Square)
PAYMENT_API_KEY=your_payment_api_key_here
PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here

# Credit Check API (Optional - for Phase 4)
CREDIT_CHECK_API_KEY=your_credit_api_key_here

# SMS Service (Optional - Twilio)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=+1234567890

# Node Environment
NODE_ENV=development

# Feature Flags
ENABLE_CREDIT_CHECK=false
ENABLE_PAYMENT_PROCESSING=false
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
